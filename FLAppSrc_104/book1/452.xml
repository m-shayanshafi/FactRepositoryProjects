		<header type="weapon"/>
		<weapon bonus="0" buy="50" sell="45"/>
		<weapon bonus="1" sell="200"/>

		<header type="magic"/>
		<tool name="amber wand" ability="magic" bonus="1" sell="400"/>

		<header type="other"/>
		<tool name="mandolin" ability="charisma" bonus="1" buy="300" sell="270"/>
		<tool name="lockpicks" ability="thievery" bonus="1" sell="270"/>
