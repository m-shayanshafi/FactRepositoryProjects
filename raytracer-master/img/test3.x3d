<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE X3D PUBLIC "ISO//Web3D//DTD X3D 3.0//EN" 
	"http://www.web3d.org/specifications/x3d-3.0.dtd">
<X3D profile="Immersive" version="3.0"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
	xsd:noNamespaceSchemaLocation="http://www.web3d.org/specifications/x3d-3.0.xsd">
	<head>
		<meta content="test1.x3d" name="title" />
		<meta content="Example 1: show simple Shapes."
			name="description" />
		<meta content="Computacion Grafica" name="editors" />
		<meta content="Abril 2008" name="created" />
		<meta content="Abril 2008" name="modified" />
	</head>
	<Scene>
		<Viewpoint orientation="1 0 0 -0.55" position="0 15 25"
			fieldOfView="0.5" />

		<PointLight location="30 50
		 5" color="1 1 1" intensity="1"
			on="true" />

		<Transform translation="7 0 0">
			<Shape>
				<Appearance>
					<Material diffuseColor="1 0 0" specularColor="1 1 1"  shininess="0.078">
						<MetadataSet>
							<MetadataFloat name="reflection" value="1"
								containerField="value" />
							<MetadataFloat name="diffuse" value="1"
								containerField="value" />
							<MetadataFloat name="specular" value="1"
								containerField="value" />
						</MetadataSet>
					</Material>
				</Appearance>
				<Sphere radius="4" />
			</Shape>
		</Transform>

		<Transform translation="-6 0 0">
			<Shape>
				<Appearance>
					<Material diffuseColor="0 1 0" specularColor="1 1 1"  shininess="0.078">
						<MetadataSet>
							<MetadataFloat name="reflection" value="1"
								containerField="value" />
							<MetadataFloat name="diffuse" value="1"
								containerField="value" />
							<MetadataFloat name="specular" value="1"
								containerField="value" />
						</MetadataSet>
					</Material>
				</Appearance>
				<Sphere radius="3" />
			</Shape>

		</Transform>
		<Transform translation="0 0 -10">
			<Shape>
				<Appearance>
					<Material diffuseColor="0 0 1" specularColor="1 1 1" shininess="0.078">
						<MetadataSet>
							<MetadataFloat name="reflection" value="1"
								containerField="value" />
							<MetadataFloat name="diffuse" value="1"
								containerField="value" />
							<MetadataFloat name="specular" value="1"
								containerField="value" />
						</MetadataSet>
					</Material>
				</Appearance>
				<Sphere radius="3" />
			</Shape>
		</Transform>
	</Scene>
</X3D>
