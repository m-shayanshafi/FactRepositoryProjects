package thaigo.utility;

import java.awt.Color;
import java.io.Serializable;

/**
 * Chat message sent when user is chating.
 * 
 * @author TG_Dream_Team
 * @version 9/5/2013
 *
 */
public class ChatMessage extends Message implements Serializable {
	
	/** The message. */
	private String text;
	
	/** Color of message. */
	private Color color;
	
	/**
	 * Constructor with parameter as text and color.
	 * @param text the message
	 * @param color color of message
	 */
	public ChatMessage(String text , Color color) {
		this.text = text;
		this.color = color;
	}
	
	/**
	 * Return message.
	 * @return the message
	 */
	public String toString() {
		return text;
	}
	
	/**
	 * Return color of message.
	 * @return color of message
	 */
	public Color getColor(){
		return color;
	}
}
